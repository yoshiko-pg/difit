{
  "name": "difit",
  "version": "3.1.9",
  "description": "A lightweight command-line tool that spins up a local web server to display Git commit diffs in a GitHub-like Files changed view",
  "type": "module",
  "engines": {
    "node": ">=21.0.0"
  },
  "bin": {
    "difit": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "homepage": "https://github.com/yoshiko-pg/difit",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshiko-pg/difit.git"
  },
  "bugs": {
    "url": "https://github.com/yoshiko-pg/difit/issues"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:cli": "tsc --project tsconfig.cli.json && NODE_ENV=development node dist/cli/index.js",
    "build": "tsc -b && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "start": "pnpm run build && node dist/cli/index.js",
    "lint": "pnpm run lint:oxlint",
    "lint:fix": "pnpm run lint:oxlint:fix",
    "lint:oxlint": "oxlint . --type-aware --deny-warnings",
    "lint:oxlint:fix": "oxlint . --type-aware --deny-warnings --fix",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "typecheck": "oxlint . --type-aware --type-check --deny-warnings",
    "knip": "knip --use-tsconfig-files",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "lefthook install",
    "prepublishOnly": "NODE_ENV=production pnpm run build",
    "perf": "node scripts/measure-performance.js",
    "perf:small": "node scripts/measure-performance.js --size small",
    "perf:medium": "node scripts/measure-performance.js --size medium",
    "perf:large": "node scripts/measure-performance.js --size large",
    "perf:xlarge": "node scripts/measure-performance.js --size xlarge",
    "perf:compare": "node scripts/compare-performance.js"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@octokit/rest": "^22.0.0",
    "@parcel/watcher": "^2.5.1",
    "commander": "^14.0.0",
    "diff": "^8.0.2",
    "express": "^5.1.0",
    "ink": "^6.0.1",
    "lucide-react": "^0.563.0",
    "open": "^11.0.0",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hotkeys-hook": "^5.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^20.0.0",
    "knip": "^5.83.0",
    "lefthook": "^2.0.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.1",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "undici": "^7.11.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.6"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "git",
    "diff",
    "cli",
    "review",
    "github",
    "code-review",
    "tailwind",
    "react",
    "diff-viewer"
  ],
  "author": "yoshiko-pg",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.28.2"
}
